{
    "name": "monotickets/api",
    "type": "project",
    "description": "Monotickets API service with JWT authentication",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0",
        "tymon/jwt-auth": "^2.0",
        "dompdf/dompdf": "^3.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "nunomaduro/collision": "^8.0",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:fast": "vendor/bin/phpunit --testsuite=Unit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
